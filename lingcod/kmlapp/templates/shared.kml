{% extends "base.kml" %}
{% load absurl %}
{% block folders_and_placemarks %}

    <NetworkLink>
    <name>Public Proposals</name>
    <open>0</open>
    <visibility>0</visibility>
    <Link>
    <href>{% absurl kmlapp-publicshared-kmz %}</href>
    </Link>
    </NetworkLink>

{% for key, group_user in groups_users.items %}
 <Folder>
  <name>{{group_user.group.name}}</name>
  <visibility>0</visibility>
  <open>0</open>

  {% for user in group_user.users %}
      <NetworkLink>
        <name>{{user.username}}</name>
        <open>0</open>
        <visibility>0</visibility>
        <Link>
         <href>{% absurl kmlapp-sharedby-kmz input_shareuser=user.id input_sharegroup=group_user.group.id session_key=session_key %}</href>
        </Link>
      </NetworkLink>
  {% endfor %}

 </Folder>
{% endfor %}

{% if iteam %}
    <NetworkLink>
    <name>Proposals Submitted to I-Team</name>
    <open>0</open>
    <visibility>0</visibility>
    <Link>
    <href>{% absurl kmlapp-iteam-kmz session_key=session_key %}</href>
    </Link>
    </NetworkLink>
{% endif %}

{% endblock %}
